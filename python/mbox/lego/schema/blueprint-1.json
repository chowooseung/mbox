{
  "$ref": "#/definitions/root",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "block": {
      "description": "lego blocks component data",
      "properties": {
        "component": {
          "description": "block ID",
          "type": "string"
        },
        "version": {
          "description": "block version",
          "type": "string"
        },
        "name": {
          "description": "block name. arm, leg, ...",
          "type": "string"
        },
        "direction": {
          "description": "block direction. Center(C), Left(L), Right(R)",
          "type": "string"
        },
        "index": {
          "description": "block index. 0, 1, ...",
          "type": "string"
        },
        "joint": {
          "description": "output joint True/False",
          "type": "boolean"
        },
        "jointAxis": {
          "description": "output joint follow axis, up axis. ['x', 'y']",
          "type": "array",
          "items": {"type": "string"},
          "minItems": 2
        },
        "meta": {
          "description": "Specific Component Data",
          "type": "object"
        },
        "mirror": {
          "description": "axis mirror True/False",
          "type": "boolean"
        },
        "transforms": {
          "description": "guide transform and value",
          "type": "array"
        },
        "priority": {
          "description": "Create Block Priority Level",
          "type": "integer"
        },
        "parent": {
          "description": "blueprint parent node name",
          "type": "string"
        }
      },
      "required": [
        "component",
        "version",
        "name",
        "direction",
        "index",
        "joint",
        "jointAxis",
        "meta",
        "mirror",
        "transforms",
        "priority",
        "parent"
      ],
      "type": "object"
    },
    "root": {
      "description": "lego block root data",
      "properties": {
        "component": {
          "description": "root ID",
          "type": "string"
        },
        "version": {
          "description": "root version"
        },
        "process": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "direction": {
          "description": "direction string. ['C', 'L', 'R']",
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 3
        },
        "blocks": {
          "oneOf": [
            {
              "items": {"$ref": "#/definitions/block"},
              "minItems": 1,
              "type": "array"
            },
            {
              "type": "null"
            }
          ]
        },
        "nameRule": {
          "properties": {
            "controllerExp": {
              "type": "string"
            },
            "jointExp": {
              "type": "string"
            },
            "convention": {
              "properties": {
                "common": {
                  "type": "string"
                },
                "joint": {
                  "type": "string"
                }
              },
              "required": [
                "common",
                "joint"
              ],
              "type": "object"
            },
            "jointDescriptionLetterCase": {
              "description": "joint letter case. [default, lower, upper, capitalize],",
              "type": "string"
            },
            "controllerDescriptionLetterCase": {
              "description": "controller letter case. [default, lower, upper, capitalize],",
              "type": "string"
            }
          },
          "required": [
            "jointExp",
            "controllerExp",
            "convention",
            "jointDescriptionLetterCase",
            "controllerDescriptionLetterCase"
          ],
          "type": "object"
        },
        "runPreScripts": {
          "type": "boolean"
        },
        "runPostScripts": {
          "type": "boolean"
        },
        "preScripts": {
          "type": "array",
          "items": {"type": "string"},
          "minItems": 0
        },
        "postScripts": {
          "type": "array",
          "items": {"type": "string"},
          "minItems": 0
        },
        "schemaVersion": {
          "type": "string"
        },
        "notes": {
          "type": "string"
        }
      },
      "required": [
        "component",
        "version",
        "process",
        "name",
        "direction",
        "blocks",
        "nameRule",
        "runPreScripts",
        "runPostScripts",
        "preScripts",
        "postScripts",
        "schemaVersion",
        "notes"
      ]
    }
  },
  "title": "lego block dag data"
}